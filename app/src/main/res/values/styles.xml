<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TitleLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="TitleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:text">@string/app_name</item>
    </style>

    <style name="TitleBackButton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:src">@drawable/ic_arrow_back_black_24dp</item>
        <item name="android:tint">@color/white</item>
    </style>


    <style name="StatisticsTableColumn0">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="StatisticsTableValueColumns">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">-</item>
    </style>

    <style name="ChannelTableRow">
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="ChannelTableColumn0">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ChannelTableValueColumns">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">-</item>
    </style>

    <style name="SkeletonView">
        <item name="baseColor">@color/skeletonBaseColor</item>
        <item name="deepColor">@color/skeletonDeepColor</item>
        <item name="duration">1500</item>
        <item name="progressLength">220dp</item>
    </style>

    <style name="SkeletonView.Rect">
        <item name="radius">5dp</item>
    </style>

    <style name="SkeletonView.Circle">
        <item name="radius">100dp</item>
    </style>

</resources>

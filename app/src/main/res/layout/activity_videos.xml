<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.screens.videos.VideosActivity"
    tools:ignore="contentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            style="@style/TitleLayout">

            <TextView
                style="@style/TitleTextView"/>

            <ImageView
                android:id="@+id/vBackButton"
                style="@style/TitleBackButton"/>

        </RelativeLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/transparent"
                android:stateListAnimator="@null">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="136dp"
                    app:contentScrim="@color/transparent"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                    app:titleEnabled="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ru.sis.statube.presentation.custom.LastUpdateView
                            android:id="@+id/vLastUpdateView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="4dp"/>

                        <ru.sis.statube.presentation.custom.PeriodChooser
                            android:id="@+id/vPeriodChooser"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:layout_marginTop="8dp"/>

                        <RelativeLayout
                            android:id="@+id/vFilterLayout0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp">

                            <LinearLayout
                                android:id="@+id/vSortLayout0"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:background="@drawable/bg_sort_spinner">

                                <TextView
                                    android:id="@+id/vSortTextView0"
                                    android:layout_width="match_parent"
                                    android:layout_height="36dp"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginEnd="32dp"
                                    android:gravity="center_vertical"
                                    android:textSize="14sp"/>

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/vSortDirectionButton0"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="2dp"
                                android:padding="10dp"
                                android:src="@drawable/ic_sort_direction_increase"
                                android:tint="@color/gray"/>

                        </RelativeLayout>

                    </LinearLayout>

                </com.google.android.material.appbar.CollapsingToolbarLayout>

            </com.google.android.material.appbar.AppBarLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/vRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"/>



        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/vLockLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true">

        <RelativeLayout
            android:id="@+id/vFilterLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <LinearLayout
                android:id="@+id/vSortLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_sort_spinner">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp">

                    <TextView
                        android:id="@+id/vSortTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="32dp"
                        android:gravity="center_vertical"
                        android:textSize="14sp"/>

                    <ImageView
                        android:visibility="gone"
                        android:layout_width="20dp"
                        android:layout_height="18dp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="8dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                        android:tint="@color/gray"/>

                </FrameLayout>

                <net.cachapa.expandablelayout.ExpandableLayout
                    android:id="@+id/vExpandableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:el_expanded="false"
                    app:el_duration="200">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="8dp">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="4dp"
                            android:background="@color/whiteSmoke"/>

                        <TextView
                            android:id="@+id/vSortByDateButton"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:layout_marginStart="16dp"
                            android:gravity="center_vertical"
                            android:textSize="14sp"
                            android:text="@string/videos_date"/>

                        <TextView
                            android:id="@+id/vSortByViewsButton"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:layout_marginStart="16dp"
                            android:gravity="center_vertical"
                            android:textSize="14sp"
                            android:text="@string/videos_views"/>

                        <TextView
                            android:id="@+id/vSortByLikesButton"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:layout_marginStart="16dp"
                            android:gravity="center_vertical"
                            android:textSize="14sp"
                            android:text="@string/videos_likes"/>

                        <TextView
                            android:id="@+id/vSortByDislikesButton"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:layout_marginStart="16dp"
                            android:gravity="center_vertical"
                            android:textSize="14sp"
                            android:text="@string/videos_dislikes"/>

                        <TextView
                            android:id="@+id/vSortByCommentsButton"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:layout_marginStart="16dp"
                            android:gravity="center_vertical"
                            android:textSize="14sp"
                            android:text="@string/videos_comments"/>

                        <TextView
                            android:id="@+id/vSortByLikesDislikesButton"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:layout_marginStart="16dp"
                            android:gravity="center_vertical"
                            android:textSize="14sp"
                            android:text="@string/videos_likes_dislikes"/>

                    </LinearLayout>

                </net.cachapa.expandablelayout.ExpandableLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/vSortDirectionButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="2dp"
                android:padding="10dp"
                android:src="@drawable/ic_sort_direction_increase"
                android:tint="@color/gray"/>

        </RelativeLayout>

    </FrameLayout>


</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.screens.channel.ChannelActivity">

    <RelativeLayout
        style="@style/TitleLayout">

        <TextView
            style="@style/TitleTextView"/>

        <ImageView
            android:id="@+id/vBackButton"
            style="@style/TitleBackButton"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/vBannerImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/vImageView"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/vTitleTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/vDescriptionTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textSize="14sp"/>

                </LinearLayout>

            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TableRow>

                    <TextView
                        style="@style/ChannelTableColumn0"
                        android:text="ID"/>

                    <TextView
                        android:id="@+id/vIdTextView"
                        style="@style/ChannelTableValueColumns"/>

                </TableRow>

                <TableRow
                    style="@style/ChannelTableRow">

                    <TextView
                        style="@style/ChannelTableColumn0"
                        android:text="Подписчиков"/>

                    <TextView
                        android:id="@+id/vSubscriberCountTextView"
                        style="@style/ChannelTableValueColumns"/>

                </TableRow>

                <TableRow
                    style="@style/ChannelTableRow">

                    <TextView
                        style="@style/ChannelTableColumn0"
                        android:text="Просмотров"/>

                    <TextView
                        android:id="@+id/vViewCountTextView"
                        style="@style/ChannelTableValueColumns"/>

                </TableRow>

                <TableRow
                    style="@style/ChannelTableRow">

                    <TextView
                        style="@style/ChannelTableColumn0"
                        android:text="Кол-во видео"/>

                    <TextView
                        android:id="@+id/vVideoCountTextView"
                        style="@style/ChannelTableValueColumns"/>

                </TableRow>

                <TableRow
                    style="@style/ChannelTableRow">

                    <TextView
                        style="@style/ChannelTableColumn0"
                        android:text="Дата создания"/>

                    <TextView
                        android:id="@+id/vPublishedAtTextView"
                        style="@style/ChannelTableValueColumns"/>

                </TableRow>

                <TableRow
                    style="@style/ChannelTableRow">

                    <TextView
                        style="@style/ChannelTableColumn0"
                        android:text="Страна"/>

                    <TextView
                        android:id="@+id/vCountryTextView"
                        style="@style/ChannelTableValueColumns"/>

                </TableRow>

                <TableRow
                    style="@style/ChannelTableRow">

                    <TextView
                        style="@style/ChannelTableColumn0"
                        android:text="Ключевые слова"/>

                    <TextView
                        android:id="@+id/vKeywordsTextView"
                        style="@style/ChannelTableValueColumns"/>

                </TableRow>

            </TableLayout>

            <RelativeLayout
                android:id="@+id/vMoveToYoutubeLayout"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="8dp"
                android:textSize="12sp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_youtube"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="32dp"
                    android:textSize="14sp"
                    android:text="Перейти на Youtube"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/vMoveToStatisticsLayout"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="8dp"
                android:textSize="12sp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_show_chart_black_24dp"
                    android:tint="@color/red"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="32dp"
                    android:textSize="14sp"
                    android:text="Статистика"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>